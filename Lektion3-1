#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int i;
    char b[10][8] = {
        "ноль",
        "один",
        "два",
        "три",
        "четыре",
        "пять",
        "шесть",
        "семь",
        "восемь",
        "девять"
    };

    cout << "Введите цифру от 0 до 9: ";
    cin >> i;
    cout << b[i] << endl;

    return 0;
}
